Security Code Validator (Palindrome)

import java.util.Scanner;

class PalindromePriyanka {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter Security Code Priyanka: ");
        int num = sc.nextInt();

        int original = num, rev = 0;

        while(num > 0){
            rev = rev * 10 + (num % 10);
            num = num / 10;
        }

        if(original == rev)
            System.out.println("Priyanka Code is VALID");
        else
            System.out.println("Priyanka Code is INVALID");
    }
}
